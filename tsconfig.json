{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@node_modules/*": ["../node_modules/*"],
      "@environments/*": ["environments/*"],
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@guards/*": ["app/guards/*"],
      "@models/*": ["app/models/*"],
      "@pipes/*": ["app/pipes/*"],
      "@services/*": ["app/services/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
